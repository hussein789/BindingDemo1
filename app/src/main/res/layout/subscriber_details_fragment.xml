<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.databindingdemo1.subscriber_details.SubscriberDetailsViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".subscriber_details.SubscriberDetailsFragment"
        android:padding="16dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:id="@+id/nameEditText"
            android:text="@={viewModel.inputName}"
            tools:text="Hussein" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:id="@+id/emailEditText"
            tools:text="Hussein@gmail.com"
            android:text="@={viewModel.inputEmail}"
            android:layout_below="@id/nameEditText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Update"
                android:onClick="@{()->viewModel.onUpdateClicked()}"
                android:id="@+id/updateSubscriberButton"
                android:layout_marginEnd="4dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete"
                android:onClick="@{()->viewModel.onDeleteClicked()}"
                android:id="@+id/deleteSubscriberButton" />


        </LinearLayout>

    </RelativeLayout>
</layout>